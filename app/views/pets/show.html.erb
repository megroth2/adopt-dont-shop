<h1><%= @pet.name %></h1>
<h3>Age: <%= @pet.age %> years old</h3>
<h3>Breed: <%= @pet.breed %></h3>
<h3>Adoptable: <%= @pet.adoptable %></h3>
<h3>Shelter name: <%= @pet.shelter_name %></h3>

<p><%= button_to "Update #{@pet.name}", "/pets/#{@pet.id}/edit", method: :get %></p>
<p><%= button_to "Delete #{@pet.name}", "/pets/#{@pet.id}", method: :delete %></p>
